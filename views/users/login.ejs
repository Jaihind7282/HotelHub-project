<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-3 login-signup-form offset-4 mt-5">
        <h4>LogIn</h4>
        <form method="POST" action="/login" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label"></label>
                <input name="username" id="username" placeholder="username" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter your username</div>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label"></label>
                <input name="password" id="password" placeholder="password" type="password" class="form-control" required>
                <div class="invalid-feedback">please enter your password</div>
            </div>
            <form action="">
                <button class="btn btn-primary all-btn btn-sm">LogIn</button>
            </form>
        </form>
    </div>
</div>